<script setup lang="uts">
import { ref } from 'vue'
import type { NoticeBarMode } from './type.uts'

interface Props {
  text?: string
  mode?: NoticeBarMode
  color?: string
  background?: string
  leftIcon?: string
  scrollable?: boolean
  customClass?: string
  customStyle?: string
}

const props = withDefaults(defineProps<Props>(), {
  text: '',
  mode: undefined,
  color: '#ed6a0c',
  background: '#fffbe8',
  leftIcon: 'ðŸ“¢',
  scrollable: false,
  customClass: '',
  customStyle: ''
})

const emit = defineEmits<{
  click: []
  close: []
}>()

const visible = ref<boolean>(true)

const handleClick = (): void => {
  emit('click')
}

const handleClose = (): void => {
  visible.value = false
  emit('close')
}
</script>

<template>
  <view
    v-if="visible"
    class="t-notice-bar"
    :class="customClass"
    :style="`background: ${background}; color: ${color}; ${customStyle}`"
    @click="handleClick"
  >
    <text v-if="leftIcon" class="t-notice-bar__icon">{{ leftIcon }}</text>
    <view class="t-notice-bar__content" :class="{ 't-notice-bar__content--scrollable': scrollable }">
      <text class="t-notice-bar__text">{{ text }}</text>
    </view>
    <text v-if="mode === 'closeable'" class="t-notice-bar__close" @click.stop="handleClose">âœ•</text>
    <text v-if="mode === 'link'" class="t-notice-bar__link">â€º</text>
  </view>
</template>

